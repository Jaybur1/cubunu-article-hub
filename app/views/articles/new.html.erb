<div class="create-new-content">
    <h1>Create a New Article</h1>

    <%= form_for(@article) do |f|%>
    <ul>
        <% @article.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
    <p>
        <%= f.label :title %><br />
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :body %><br />
        <%= f.text_field :body%>
    </p>
    <p class="submit-new">
        <%= f.submit %>
        <%= link_to 'Back to Articles', articles_path , class: 'action_button' %>
    </p>
    
    <% end %>
</div>