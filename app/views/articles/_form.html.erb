<%= form_for(@article, html: {multipart: true}) do |f| %>
  <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body%>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list%>
  </p>
  <p class="add-attachment attachment">
    <% if @article.image.exists? %>
      <%= image_tag @article.image.url %><br />
      <%= f.label :image, "Change Attachment?" %><br />
      <%= f.file_field :image %>
    <% else %>
      <%= f.label :image, "Attach an Image" %><br />
      <%= f.file_field :image %>
    <% end %>
  </p>
  <p class="submit-new">
    <%= f.submit %>
    <%= link_to 'Back to Articles', articles_path , class: 'action_button' %>
  </p>
<% end %>
