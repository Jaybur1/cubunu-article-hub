<div class="index content">
  <h1>All Articles</h1>
  <ul class="articles-list">
    <% @articles.each do |article| %>
      <li>
        <%= link_to article.title, article_path(article), class: 'article-box' %>
      </li>
    <% end %>
  </ul>
  <%= link_to "Create a new Article", new_article_path, class: 'action_button' %>
  <%= link_to 'Pick a Tag', tags_path , class: 'action_button'%>
  <p class='footer'>Coded by JayBur&copy;2019</p>
  <div class="logo">
    <%=svg 'title_logo' %>
  </div>
</div>
