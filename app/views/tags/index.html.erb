<div class="content">
  <h1>All Tags</h1>
  <ul class="tags-list">
    <% if @tags.size == 0%>
      Sorry, There is no tags for now ...
    <%else%>
      <% @tags.each do |tag| %>
        <li class="article-box">
          <div class="article-card">
            <%= link_to tag.name , tag_path(tag) %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
  <%= link_to "Back to Articles List", articles_path, class: 'login_button'%>
</div>
