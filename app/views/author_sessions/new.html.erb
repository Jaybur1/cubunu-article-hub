<div class="login-box">
  <h1>Login</h1>
  <%= form_tag author_sessions_path, method: :post do %>
    <div class="email-field">
      <%= label_tag :email, "Email:" %>
      <%= text_field_tag :email %>
      <br/>
    </div>
    <div class="password-field">
      <%= label_tag :password ,"Password:"%>
      <%= password_field_tag :password %>
      <br/>
    </div>
    <%= submit_tag "Login" , class: 'login_button' %>
  <% end %>
  <div class="sign-in-box">
    <h3>You new ? Come Join us !</h3>
    <%= link_to 'Sign in', new_author_path, class: 'sign_button' %>
  </div>
</div>
<%= link_to 'Back', articles_path , class: 'action_button' %>
